[alias]
	a    = add
	br   = branch
	c    = commit
	cl   = clone
	co   = checkout
	d    = diff
	dc   = diff --cached
	delete-remote-br = !sh -c 'git push origin :$1' -
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	l    = log --graph --stat --all
	last = for-each-ref 'refs/heads' 'refs/remotes/*/[^H][^E][^A][^D]*' --sort=-committerdate --format='%(HEAD) %(refname:short) - (%(color:green)%(committerdate:relative)%(color:reset)) - %(color:yellow)%(authorname)%(color:reset) - %(contents:subject)'
	lg   = "log --format='%C(auto) %aN %h %d %s'"
	ol   = log --oneline
	ph   = push
	pl   = pull
	ps   = push
	s    = status --ignored
	st   = status --ignored
	sw   = switch
	re   = rebase
	unstage = restore --staged
	wt   = "!f() { if [ $# -eq 0 ]; then git worktree list ; else git worktree $@ ; fi }; f"
[bash]
	showDirtyState = true
	showInformativeStatus = true
	showUntrackedFiles = true
[color]
	ui = auto
[commit]
	verbose = true
[core]
	autocrlf = input
[diff]
	tool = meld
[diff "odf"]
	binary = true
	textconv = odt2txt
[fetch]
	prune = true
[help]
	autocorrect = 25
[init]
	defaultBranch = master
[log]
	mailmap = true
[pager]
	branch = false
[pull]
	rebase = false
[push]
	default = simple
[include]
	path = ~/.config/git/personal
	path = ~/.config/git/work
