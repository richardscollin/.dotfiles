[alias]
	a       = add
	b       = branch
	c       = commit
	co      = checkout
	d       = diff
	dc      = diff --cached
	delete-remote-br = !sh -c 'git push origin :$1' -
  ff      = pull --ff-only
	hist    = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	l       = log --graph --stat
	la      = log --graph --stat --all
	last    = for-each-ref 'refs/heads' 'refs/remotes/*/[^H][^E][^A][^D]*' --sort=-committerdate --format='%(HEAD) %(refname:short) - (%(color:green)%(committerdate:relative)%(color:reset)) - %(color:yellow)%(authorname)%(color:reset) - %(contents:subject)'
	lg      = "log --format='%C(auto) %aN %h %d %s'"
	ol      = log --oneline
	pl      = pull
	ps      = push
	s       = status
	st      = status
	sw      = switch
	re      = rebase
	unstage = restore --staged
	wt      = "!f() { if [ $# -eq 0 ]; then git worktree list ; else git worktree $@ ; fi }; f"
[bash]
	showDirtyState = true
	showInformativeStatus = true
	showUntrackedFiles = true
[branch]
	sort = -committerdate
[color]
	ui = auto
[commit]
	verbose = true
[core]
	autocrlf = input
[diff]
# noprefix = true
	colorMoved = default
	tool = meld
[diff "odf"]
	binary = true
	textconv = odt2txt
[fetch]
	prune = true
[help]
	autocorrect = 25
[include]
	path = ~/.config/git/config.personal
	path = ~/.config/git/config.work
[init]
	defaultBranch = master
[log]
	mailmap = true
[merge]
	conflictstyle = diff3
[pager]
	branch = false
[pull]
	rebase = false
[push]
	default = simple
	autoSetupRemote = true
[tag]
	sort = -version:refname
[cinnabar]
	version-check = 1730923024
